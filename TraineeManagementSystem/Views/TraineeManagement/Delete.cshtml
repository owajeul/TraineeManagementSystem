@model Trainee

@{
    ViewData["Title"] = "Delete Trainee";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Delete Trainee</h2>

    <div class="card shadow-lg p-4">
        <h4 class="text-center">Are you sure you want to delete the following trainee?</h4>

        <div>
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>University:</strong> @Model.University</p>
            <p><strong>Technology:</strong> @Model.Technology</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
