@model Trainee

@{
    ViewData["Title"] = "Edit Trainee";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Edit Trainee</h2>

    <div class="card shadow-lg p-4">
        <form asp-action="Edit" method="post">
            <!-- Hidden field for ID (needed for updates) -->
            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="University" class="form-label">University</label>
                <input asp-for="University" class="form-control" required>
                <span asp-validation-for="University" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Technology" class="form-label">Technology</label>
                <input asp-for="Technology" class="form-control" required>
                <span asp-validation-for="Technology" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" class="form-control" required>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
